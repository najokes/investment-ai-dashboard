                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Футер -->
    <footer class="text-center">
        <div class="container">
            <p>&copy; 2025 ИИ-платформа управления инвестициями. Демо-версия для защиты магистерской диссертации.</p>
            <p class="small">Все данные являются демонстрационными и созданы для иллюстрации работы системы</p>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Наш JavaScript -->
    <script>
        // Инициализация вкладок
        document.addEventListener('DOMContentLoaded', function() {
            // Инициализация всех вкладок
            var triggerTabList = [].slice.call(document.querySelectorAll('a[data-bs-toggle="tab"]'));
            triggerTabList.forEach(function (triggerEl) {
                var tabTrigger = new bootstrap.Tab(triggerEl);
                triggerEl.addEventListener('click', function (event) {
                    event.preventDefault();
                    tabTrigger.show();
                });
            });
            
            // Инициализация проектов
            initProjects();
            
            // Слайдер бюджета
            const budgetSlider = document.getElementById('budget-slider');
            const budgetValue = document.getElementById('budget-value');
            
            if (budgetSlider) {
                budgetSlider.addEventListener('input', function() {
                    budgetValue.textContent = this.value;
                });
            }
            
            // Обновление KPI
            updateKPI();
        });
        
        // Демо-данные проектов
        const projects = [
            { name: "AI-модуль для телематики", budget: 1.2, roi: 1.8, duration: 18, risk: "Средний", priority: 0.9 },
            { name: "Облачная аналитика Big Data", budget: 2.5, roi: 1.5, duration: 24, risk: "Высокий", priority: 0.7 },
            { name: "Мобильное приложение IoT", budget: 0.8, roi: 2.2, duration: 12, risk: "Низкий", priority: 0.95 },
            { name: "Блокчейн для страхования", budget: 1.5, roi: 1.2, duration: 36, risk: "Высокий", priority: 0.6 },
            { name: "Платформа предиктивной аналитики", budget: 1.8, roi: 1.9, duration: 20, risk: "Средний", priority: 0.85 }
        ];
        
        // Инициализация таблицы проектов
        function initProjects() {
            const table = document.getElementById('projects-table');
            if (!table) return;
            
            table.innerHTML = '';
            
            projects.forEach(project => {
                const row = document.createElement('tr');
                const riskClass = project.risk === 'Низкий' ? 'success' : 
                                 project.risk === 'Средний' ? 'warning' : 'danger';
                
                row.innerHTML = `
                    <td>${project.name}</td>
                    <td>${project.budget.toFixed(1)} млн ₽</td>
                    <td>${(project.roi * 100).toFixed(0)}%</td>
                    <td>${project.duration} мес</td>
                    <td><span class="badge bg-${riskClass}">${project.risk}</span></td>
                    <td>
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar" style="width: ${project.priority * 100}%">
                                ${(project.priority * 100).toFixed(0)}%
                            </div>
                        </div>
                    </td>
                `;
                table.appendChild(row);
            });
        }
        
        // Прогноз LTV
        function predictLTV() {
            const clientType = document.getElementById('client-type').value;
            const resultDiv = document.getElementById('ltv-result');
            
            let baseLTV, predictedLTV, recommendation;
            
            switch(clientType) {
                case 'high':
                    baseLTV = 450000;
                    predictedLTV = baseLTV * 1.3;
                    recommendation = "Приоритетная разработка кастомных функций, выделенный менеджер";
                    break;
                case 'stable':
                    baseLTV = 250000;
                    predictedLTV = baseLTV * 1.1;
                    recommendation = "Инвестиции в автоматизацию обслуживания, предложение пакетов услуг";
                    break;
                case 'risk':
                    baseLTV = 180000;
                    predictedLTV = baseLTV * 0.9;
                    recommendation = "Запуск программы лояльности, глубокий анализ причин оттока";
                    break;
                case 'low':
                    baseLTV = 80000;
                    predictedLTV = baseLTV * 0.7;
                    recommendation = "Перевод на стандартизированные тарифы, ограничение кастомной разработки";
                    break;
            }
            
            resultDiv.innerHTML = `
                <div class="alert alert-info">
                    <h5>Результат прогноза</h5>
                    <p><strong>Базовый LTV:</strong> ${formatCurrency(baseLTV)}</p>
                    <p><strong>Прогнозируемый LTV:</strong> <span class="text-success">${formatCurrency(predictedLTV)}</span></p>
                    <p><strong>Рекомендация:</strong> ${recommendation}</p>
                    <p class="small text-muted">*На основе алгоритма градиентного бустинга (LightGBM), точность R²=0.89</p>
                </div>
            `;
        }
        
        // Оптимизация портфеля
        function optimizePortfolio() {
            const budget = parseFloat(document.getElementById('budget-slider').value);
            const resultDiv = document.getElementById('portfolio-result');
            
            // Простая логика оптимизации
            const sortedProjects = [...projects].sort((a, b) => (b.roi / b.budget) - (a.roi / a.budget));
            
            let selected = [];
            let totalCost = 0;
            let totalROI = 0;
            
            for (let project of sortedProjects) {
                if (totalCost + project.budget <= budget) {
                    selected.push(project);
                    totalCost += project.budget;
                    totalROI += project.roi * project.budget;
                }
            }
            
            const avgROI = totalROI / totalCost;
            
            let projectsHTML = '';
            selected.forEach(p => {
                projectsHTML += `<li>${p.name} (${p.budget} млн ₽, ROI: ${(p.roi*100).toFixed(0)}%)</li>`;
            });
            
            resultDiv.innerHTML = `
                <div class="alert alert-success">
                    <h5>Результат оптимизации</h5>
                    <p><strong>Бюджет:</strong> ${budget} млн ₽</p>
                    <p><strong>Использовано:</strong> ${totalCost.toFixed(1)} млн ₽ (${((totalCost/budget)*100).toFixed(0)}%)</p>
                    <p><strong>Ожидаемый ROI портфеля:</strong> <span class="text-success">${(avgROI*100).toFixed(1)}%</span></p>
                    <p><strong>Выбранные проекты:</strong></p>
                    <ul>${projectsHTML}</ul>
                    <p class="small text-muted">*На основе алгоритма Q-learning (обучение с подкреплением)</p>
                </div>
            `;
        }
        
        // Прогноз отказов
        function predictFailure() {
            const equipment = document.getElementById('equipment-select').value;
            const resultDiv = document.getElementById('maintenance-result');
            
            let probability, status, recommendation;
            
            switch(equipment) {
                case 'server1':
                    probability = 0.15;
                    status = 'Нормальный';
                    recommendation = 'Плановое обслуживание через 3 месяца';
                    break;
                case 'server2':
                    probability = 0.45;
                    status = 'Требует внимания';
                    recommendation = 'Рекомендуется обслуживание в течение 2 недель';
                    break;
                case 'server3':
                    probability = 0.78;
                    status = 'Критический';
                    recommendation = 'Требуется СРОЧНОЕ обслуживание!';
                    break;
                case 'router1':
                    probability = 0.12;
                    status = 'Нормальный';
                    recommendation = 'Плановое обслуживание через 3 месяца';
                    break;
            }
            
            const statusClass = probability < 0.3 ? 'success' : probability < 0.6 ? 'warning' : 'danger';
            
            resultDiv.innerHTML = `
                <div class="alert alert-${statusClass}">
                    <h5>Результат анализа</h5>
                    <p><strong>Статус:</strong> <span class="badge bg-${statusClass}">${status}</span></p>
                    <p><strong>Вероятность сбоя в ближайшие 72 часа:</strong> ${(probability*100).toFixed(1)}%</p>
                    <p><strong>Рекомендация:</strong> ${recommendation}</p>
                    <p class="small text-muted">*На основе алгоритма автокодировщиков, точность обнаружения 94%</p>
                </div>
            `;
        }
        
        // Обновление KPI
        function updateKPI() {
            // Демо-значения
            document.getElementById('kpi-total-ltv').textContent = '12.5 млн ₽';
            document.getElementById('kpi-roi').textContent = '21.3%';
            document.getElementById('kpi-churn').textContent = '7.2%';
            document.getElementById('kpi-capex').textContent = '-15%';
        }
        
        // Форматирование валюты
        function formatCurrency(value) {
            if (value >= 1000000) {
                return (value / 1000000).toFixed(1) + ' млн ₽';
            } else if (value >= 1000) {
                return (value / 1000).toFixed(0) + ' тыс ₽';
            }
            return value.toFixed(0) + ' ₽';
        }
        
        // Автоматическое обновление KPI каждые 30 секунд
        setInterval(() => {
            // Случайные колебания для реалистичности
            const roi = document.getElementById('kpi-roi');
            const currentROI = parseFloat(roi.textContent);
            roi.textContent = (currentROI + (Math.random() - 0.5) * 0.2).toFixed(1) + '%';
        }, 30000);
    </script>
</body>
</html>
